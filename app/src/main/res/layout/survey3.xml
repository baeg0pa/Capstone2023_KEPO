<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestActivity">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[휴식]보통 언제 쉬시나요?"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <RadioGroup
        android:id="@+id/optionsRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextView"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/cafeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평일 오전" />

        <RadioButton
            android:id="@+id/movieTheaterRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평일 오후" />

        <RadioButton
            android:id="@+id/shoppingRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주말 오전" />

        <RadioButton
            android:id="@+id/homeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주말 오후" />

    </RadioGroup>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:layout_below="@id/optionsRadioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

</RelativeLayout>
